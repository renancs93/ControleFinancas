<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_conta_celula"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="1dp"
        >

        <LinearLayout
            android:id="@+id/layout_conta_celula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="70dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/txtDescricao"
                    android:layout_weight="1"
                    style="@style/text_view_label_header"
                    />

                <TextView
                    android:id="@+id/tv_descricao_conta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/txtDescricao"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    style="@style/text_view_label_main"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/txtSaldo"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/text_view_label_header"
                    />

                <TextView
                    android:id="@+id/tv_saldo_conta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/txtSaldo"
                    android:layout_weight="2"
                    android:gravity="center"
                    style="@style/text_view_label_main"

                    />
            </LinearLayout>

            <!--
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:theme="@style/TextInputLayoutAppearance"
                android:focusable="false"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tv_descricao_conta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:hint="@string/txtDescricao"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:focusable="false"
                />
            </android.support.design.widget.TextInputLayout>
            -->


            <!--
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tv_saldo_conta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:hint="@string/txtSaldo"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:clickable="false"
                    android:longClickable="false"
                    android:focusableInTouchMode="false"
                    android:theme="@style/TextInputLayoutAppearance"
                    />
            </android.support.design.widget.TextInputLayout>
            -->

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
